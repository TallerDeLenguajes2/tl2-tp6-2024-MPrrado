@using EspacioClientes
@model Cliente

<h1 class="text-center"> MODIFICAR DATOS CLIENTE</h1>
<section class="d-flex justify-content-center">
    <form asp-action="Index" asp-controller="Cliente" method="post" class="col-6">
        <section class="form-group">
            <input asp-for="@Model.ClienteId" hidden>
        </section>

        <section class="form-group">
            <label asp-for="@Model.Nombre" class="from-label fw-bold">Nombre: </label>
            <input asp-for="@Model.Nombre" class="form-control">
        </section>
        
        <section class="form-group">
            <label asp-for="@Model.Email" class="from-label fw-bold">Email:</label>
            <input asp-for="@Model.Email" class="form-control">
        </section>

        <section class="form-group">
            <label asp-for="@Model.Telefono" class="from-label fw-bold">Telefono:</label>
            <input asp-for="@Model.Telefono" class="form-control">
        </section>

        <section class="mt-3">
            <button type="submit" class="btn btn-primary" asp-controller="Cliente" asp-action="ModificarCliente"> Modificar</button>
        </section>
    </form>
</section>